// ============================
// üìò BOOKINGS BOARD MEASURES
// ============================

// ‚úÖ Total number of bookings
Total Bookings = 
    COUNTROWS('Reservations Data')


// ‚úÖ Number of bookings that were NOT cancelled
CheckedIn Bookings = 
    CALCULATE(
        [Total Bookings],
        'Reservations Data'[Cancellation Status] = "No"
    )


// ‚úÖ Number of bookings that were cancelled
Cancelled Bookings = 
    CALCULATE(
        [Total Bookings],
        'Reservations Data'[Cancellation Status] = "Yes"
    )


// üè∑Ô∏è Dynamic title for bookings count visuals
Title TB = 
    VAR _SelectedMonth = SELECTEDVALUE('Calendar'[Month Short])
    RETURN
        IF (
            _SelectedMonth <> BLANK(),
            _SelectedMonth & " Bookings",
            "Total Bookings"
        )


// üìù Caption showing top 2 months with most cancellations
Caption Cancelled Bookings = 
    CONCATENATEX(
        TOPN(
            2,
            SUMMARIZE(
                FILTER(
                    'Calendar',
                    [Cancelled Bookings] <> BLANK()
                ),
                'Calendar'[Month Short], 
                "CancelledReservations", [Cancelled Bookings]
            ),
            [CancelledReservations],
            DESC
        ),
        'Calendar'[Month Short] & " " &
        FORMAT([CancelledReservations], "#,##"),
        UNICHAR(10) & "|" & " ",
        [CancelledReservations], DESC
    )


// üìù Caption showing top 2 months with most check-ins
Caption CheckedIn Bookings = 
    CONCATENATEX(
        TOPN(
            2,
            SUMMARIZE(
                FILTER(
                    'Calendar',
                    [CheckedIn Bookings] <> BLANK()
                ),
                'Calendar'[Month Short], 
                "CheckedInReservations", [CheckedIn Bookings]
            ),
            [CheckedInReservations],
            DESC
        ),
        'Calendar'[Month Short] & " " &
        FORMAT([CheckedInReservations], "#,##"),
        UNICHAR(10) & "|" & " ",
        [CheckedInReservations], DESC
    )


// üéõÔ∏è Switch between ‚ÄúClear‚Äù and ‚ÄúValues‚Äù view (used in visuals)
SwitchValues = 
    VAR _ActiveSwitch = SELECTEDVALUE(SwitchValues[Switch])
    RETURN
        SWITCH(
            TRUE(),
            _ActiveSwitch = "Clear", "#ffffff00",
            _ActiveSwitch = "Values", "#000000"
        )
